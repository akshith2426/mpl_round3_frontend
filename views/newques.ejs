<%- include("partials/qheader.ejs")  %>
<nav>
    <div class="nav-wrapper">
      <a href="#!" class="brand-logo">SIAM-VIT</a>
      <ul class="right hide-on-med-and-down">
        <li class="active"><a href="/questions/new">Add Questions</a></li>
        <li><a href="/questions/view">Questions</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
  </nav>

<div class="container">
    <h1>Add questions for a category</h1>
    <form action="/questions/new" method="post">
        <div class="row">
            <div class="input-field col s12">
                <input id="cat" type="text" class="validate" name="category">
                <label for="cat">Category Name</label>
            </div>
        </div>
        <%for(var i=0;i<=4;i++){%>
            <div class="row">
                <div class="input-field col s8">
                    <input id="q<%=i%>" type="text" class="validate" name="q[<%=i%>][desc]" required>
                    <label for="q<%=i%>">QUESTION-<%=i%></label>
                </div>
                <div class="input-field col s4">
                    <input id="qp<%=i%>" type="number" class="validate" name="q[<%=i%>][points]" required>
                    <label for="qp<%=i%>">POINTS</label>
                </div>
            </div>
        <%}%>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
    </form>
</div>






