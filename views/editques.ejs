<%- include("partials/qheader.ejs")  %>

<div class="container" style="margin-top:200px">
    <form action="/questions/<%=ques._id%>/edit?_method=patch" method="post" style="border: 5px solid black">
        <h1 class="center">Modify the question</h1>
        <div class="container">
        <div class="row">
        <div class="input-field col s12">
            <input type="text" id="q" value="<%=ques.desc%>" name="question[desc]">
            <label for="q">Question</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <input type="number" id="p" value="<%=ques.points%>" name="question[points]">
            <label for="p">Points</label>
        </div>
    </div>
    <div class="row center">
        <button class="btn"> Submit</button>
    </div>
</div>
</form>
</div>



